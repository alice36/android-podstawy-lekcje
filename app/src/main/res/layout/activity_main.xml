<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:src="@drawable/javastart_big_black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="0.5"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Witaj w aplikacji dołączonej do kursu Android Podstawy na stronie javastart.pl. Przedstawione tutaj zostało działanie wszystkich przykładów z kursu.\n\nW zawartości kursu znajdziesz wszystkie kody źródłowe z dokładnym wyjaśnieniem każdego szczegółu."/>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="lessonListButton"
        android:text="Przejdź do listy zagadnień"/>

</LinearLayout>